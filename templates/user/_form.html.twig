{{ form_start(form) }}

<div class="row">
    <div class="col-md-8 ml-auto mr-auto">
        <div class="card card-upgrade">
            <div class="card-header text-center">
                <h4 class="card-title"> {% if(app.request.get('_route')=="user_edit") %} Modifier Utilisateur {% else %}Ajouter un utilisateur{% endif %}</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive table-upgrade">
                    <table class="table">

                        <tbody>
                        <tr>
                            <td>
                                {{ form_label(form.userName) }}
                            </td>
                            <td colspan="2">
                                {{ form_widget(form.userName) }}
                            </td>

                        </tr>
                        <tr>
                            <td>
                                {{ form_label(form.email) }}
                            </td>
                            <td colspan="2">
                                {{ form_widget(form.email) }}
                            </td>

                        </tr>
                        <tr>
                            <td>{{ form_label(form.password) }}  </td>
                            <td colspan="2">{{ form_widget(form.password, {'attr' : {'value' : user.password }} ) }}

                            </td>

                        </tr>
                        <tr>
                            <td>{{ form_label(form.companyInterne) }}  </td>
                            <td colspan="2">{{ form_widget(form.companyInterne, {'attr' : {'value' : user.password }} ) }}

                            </td>

                        </tr>
                        <tr>
                            <td>{{ form_label(form.isAdmin) }}  </td>
                            <td colspan="2">{{ form_widget(form.isAdmin) }}
                            </td>


                        </tr>
                        <tr>
                            <td colspan="3" class="text-center">
                                <button class="btn">{{ button_label|default('enregistrer') }}</button>

                            {% if(app.request.get('_route')=="user_edit") %}
                                <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-outline-danger">Supprimer</button>
                                </form>

                            {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}