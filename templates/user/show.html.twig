{% extends 'layouts/app.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 ml-auto mr-auto">
        <div class="card card-upgrade">
            <div class="card-header text-center">
                <h4 class="card-title">Fiche utilisateur</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive table-upgrade">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>

                            <tr>
                                <th>User Name</th>
                                <td>{{ user.userName }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Role</th>
                                <td>{{ user.roles[0] }}</td>
                            </tr>

                        <tr>
                            <td colspan="2">
                                <div class="float-end">
                                    {% if user!= app.user %}
                                        <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Vous Ãªtres sur de ' +
                                         'supprimer det utilisateur');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button class="btn btn-outline-danger">Supprimer</button>
                                            <a class="btn-outline-success" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                                        </form>
                                    {% else %}
                                        <a class="btn-outline-success" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                                    {% endif %}

                                </div>
                            </td>
                        </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
