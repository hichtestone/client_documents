


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5 class="title">Équipement</h5>
        </div>
        <div class="card-body">
            {{ form_start(form, {'action': path('equipement_new',{'id': client.id})}) }}
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Type equipement</label>
                            {{ form_widget(form.TYPE, {'attr' : {'class' : 'form-control'}} ) }}
                            {{ form_errors(form.TYPE) }}

                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nom équipement</label>
                            {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}} ) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">

                            <div class="form-group">
                                <label>Mot du passe </label>
                                {{ form_widget(form.password, {'attr' : {'class' : 'form-control'}} ) }}
                                {{ form_errors(form.password) }}
                            </div>

                    </div>
                </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-fill btn-outline-success">{{ button_label|default('enregistrer') }}</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>